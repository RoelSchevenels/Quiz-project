<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.h2.Driver</property>
  <property name="hibernate.connection.url">jdbc:h2:~/Desktop/database/test</property>
  <property name="hibernate.dialect">org.hibernate.dialect.DB2Dialect</property>
  <property name="hibernate.connection.username">Quiz</property>
  <property name="hibernate.connection.password">Quiz</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.format_sql">true</property>
  
  <mapping class="BussinesLayer.Jury"/>
  <mapping class="BussinesLayer.Player"/>
  <mapping class="BussinesLayer.QuizMaster"/>
  <mapping class="BussinesLayer.User"/>
  <mapping class="BussinesLayer.Answer"/>
  <mapping class="BussinesLayer.Team" />
  <mapping class="BussinesLayer.Quiz" />
  <mapping class="BussinesLayer.QuestionRound"/>
  <mapping class="BussinesLayer.questions.StandardQuestion"/>
  <mapping class="BussinesLayer.questions.MultipleChoise"/>
  <mapping class="BussinesLayer.questions.MultipleChoisePosebility"/>
  <mapping class="BussinesLayer.questions.MediaQuestion"/>
  <mapping class="BussinesLayer.questions.PictureQuestion"/>
  <mapping class="BussinesLayer.questions.VideoQuestion"/>
  <mapping class="BussinesLayer.questions.MusicQuestion"/>
  
 </session-factory>
</hibernate-configuration>
